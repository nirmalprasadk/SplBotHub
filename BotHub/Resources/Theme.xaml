<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Primary Brand Colors  -->
    <Color x:Key="PrimaryColor">#4A6CF7</Color>
    <Color x:Key="PrimaryHoverColor">#3A57D6</Color>

    <!--  Backgrounds  -->
    <Color x:Key="AppBackgroundColor">#F5F7FA</Color>
    <Color x:Key="HeaderBackgroundColor">White</Color>

    <!--  Borders  -->
    <Color x:Key="HeaderBorderColor">#E3E7EC</Color>

    <!--  Foreground Text  -->
    <Color x:Key="PrimaryTextColor">#333333</Color>
    <Color x:Key="SecondaryTextColor">#444444</Color>

    <Color x:Key="ConnectColor">#4CAF50</Color>
    <Color x:Key="DisconnectColor">#F44336</Color>

    <!--  Brushes  -->

    <SolidColorBrush x:Key="ConnectBrush" Color="{StaticResource ConnectColor}" />
    <SolidColorBrush x:Key="DisconnectBrush" Color="{StaticResource DisconnectColor}" />

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{StaticResource PrimaryHoverColor}" />

    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{StaticResource AppBackgroundColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}" />

    <SolidColorBrush x:Key="HeaderBorderBrush" Color="{StaticResource HeaderBorderColor}" />

    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}" />

</ResourceDictionary>
