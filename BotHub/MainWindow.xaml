<Window
    x:Class="BotHub.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BotHub"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{Binding WindowTitle}"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <ComboBox
            Width="200"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            DisplayMemberPath="Name"
            ItemsSource="{Binding AvailableBots}"
            SelectedItem="{Binding SelectedBot, Mode=TwoWay}" />
        <Button
            Width="100"
            Margin="220,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding SBoxConnectionCommand}"
            Content="Connect to SBOX" />
        <Button
            Width="100"
            Margin="330,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding ReloadBotsCommand}"
            Content="Reload Bots" />
    </Grid>
</Window>
